<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#E6E6E6"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:background="@drawable/layout_outline">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/layout_outline_straight"

            android:gravity="center_horizontal"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/event_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="year"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#ef6c00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="event date"
                android:layout_margin="3dp"
                android:id="@+id/event_date"
                android:textColor="#ef6c00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Day"
                android:textColor="#ef6c00"
                android:id="@+id/event_wday" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title for event"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/event_name"
            android:layout_alignParentTop="true"

        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Venue event"
            android:id="@+id/event_loc"
            android:layout_below="@+id/event_name"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="22dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>