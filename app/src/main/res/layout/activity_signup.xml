<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bck"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="#ef6c00">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="back"
            android:src="@drawable/back_bt" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageButton1"
            android:text="Sign Up"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear1"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_background">

        <EditText
            android:id="@+id/fn_edtext"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/simple_round_black"
            android:hint="First Name"
            android:inputType="text">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ln_edtext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/fn_edtext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/simple_round_black"
            android:hint="Last Name" />

        <EditText
            android:id="@+id/email_edtext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/ln_edtext"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/simple_round_black"
            android:hint="Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ph_edtext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/email_edtext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/simple_round_black"
            android:hint="Mobile Number"

            android:inputType="phone" />

        <Button
            android:id="@+id/next_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ph_edtext"
            android:layout_alignRight="@+id/ph_edtext"
            android:layout_below="@+id/ph_edtext"
            android:layout_marginTop="20dp"

            android:background="@drawable/layout_round_orange_button"
            android:onClick="next"
            android:text="Next"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/signin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/next_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:onClick="signin"
            android:text="Sign In"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    </RelativeLayout>
</RelativeLayout>