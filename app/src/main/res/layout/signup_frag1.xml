<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear1"
        android:layout_marginBottom="34dp"
        android:background="@drawable/login_background">

        <EditText
            android:id="@+id/fn_edtext"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/simple_round_black"
            android:hint="First Name"
            android:inputType="text">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/ln_edtext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/fn_edtext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/simple_round_black"
            android:hint="Last Name" />

        <EditText
            android:id="@+id/email_edtext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/ln_edtext"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/simple_round_black"
            android:hint="Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ph_edtext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/email_edtext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/simple_round_black"
            android:hint="Mobile Number"

            android:inputType="phone" />

        <Button
            android:id="@+id/next_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ph_edtext"
            android:layout_alignRight="@+id/ph_edtext"
            android:layout_below="@+id/ph_edtext"
            android:layout_marginTop="20dp"

            android:background="@drawable/layout_round_orange_button"
            android:text="Next"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/signin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:onClick="signin"
            android:text="Sign In"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:visibility="invisible" />


    </RelativeLayout>
</RelativeLayout>