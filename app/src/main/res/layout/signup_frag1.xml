<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:background="@drawable/login_background"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/x_fn_edtext">

            <EditText
                android:id="@+id/fn_edtext"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/simple_round_black"
                android:hint="First Name"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/x_ln_edtext"
            android:layout_below="@+id/x_fn_edtext">

            <EditText
                android:id="@+id/ln_edtext"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/simple_round_black"
                android:hint="Last Name"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/x_email_edtext"
            android:layout_below="@+id/x_ln_edtext">

            <EditText
                android:id="@+id/email_edtext"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/simple_round_black"
                android:hint="Email Id"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/x_ph_edtext"
            android:layout_below="@+id/x_email_edtext">

            <EditText
                android:id="@+id/ph_edtext"
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/simple_round_black"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/next_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/x_ph_edtext"
            android:layout_alignRight="@+id/x_ph_edtext"
            android:layout_below="@+id/x_ph_edtext"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_round_orange_button"
            android:text="Next"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/signin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/next_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:onClick="signin"
            android:text="Sign In"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>
</RelativeLayout>